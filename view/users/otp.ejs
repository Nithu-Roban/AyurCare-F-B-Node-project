      border-radius: 10px;
    }

    .title {
      font-weight: 600;
      margin-top: 20px;
      font-size: 24px;
      color: #17a2b8; /* Changed title color */
    }

    .customBtn {
      border-radius: 5px;
      padding: 10px;
      background-color: #17a2b8; /* Changed button background color */
      border-color: #17a2b8; /* Changed button border color */
    }

    .customBtn:hover {
      background-color: #138496; /* Darker shade for hover effect */
      border-color: #138496; /* Darker shade for hover effect */
    }

    form input {
      display: inline-block;
      width: 200px;
